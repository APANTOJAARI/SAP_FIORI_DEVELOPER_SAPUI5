<core:FragmentDefinition 
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
>

    <Panel headerText="Estados">
        <FlexBox alignItems="Start"
        justifyContent="Center">
            <HeaderContainer  id="container2" scrollStep="200">
            <VBox direction="Row" class="sapUiSmallMargin" items="{path: '/EstadosSolicitudes'}">
                <TileContent footer="{Descripcion}" footerColor="{Valuecolor}">
                    <content>
                        <NumericContent value="{Cantidad}" valueColor="{Valuecolor}" press="press" icon="{Icon}" truncateValueTo="24"/>
                    </content>
                </TileContent>
                </VBox>
            </HeaderContainer>
            
        </FlexBox>
    </Panel>


</core:FragmentDefinition>